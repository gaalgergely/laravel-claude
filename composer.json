{
  "name": "gaalgergely/laravel-claude",
  "description": "Connector for Claude API (Anthropic)",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": ">=8.2",
    "illuminate/support": "^10.0|^11.0|^12.0"
  },
  "require-dev": {
    "pestphp/pest": "^2.0",
    "orchestra/testbench": "^8.0|^9.0",
    "larastan/larastan": "^3.7",
    "phpstan/phpstan": "^2.1"
  },
  "autoload": {
    "psr-4": {
      "GaalGergely\\LaravelClaude\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "GaalGergely\\LaravelClaude\\Tests\\": "tests/",
      "GaalGergely\\LaravelClaude\\Fixtures\\":  "tests/Fixtures/"
    }
  },
  "scripts": {
    "test": [
      "@php ./vendor/bin/pest"
    ]
  },
  "extra": {
    "laravel": {
      "providers": [
        "GaalGergely\\LaravelClaude\\ClaudeServiceProvider"
      ]
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
